<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.coffeereview.mapper.ReplyMapper">

	<insert id="insert">
		
		insert into 
			tbl_reply (mno, reply, replyer)
		values
			(#{mno}, #{reply}, #{replyer})
		
	</insert>
	
	<select id="read" resultType="com.coffeereview.domain.ReplyVO">
		
		select
			*
		from
			tbl_reply
		where
			rno = #{rno}
		
	</select>
	
	<delete id="delete">
		
		delete from 
			tbl_reply
		where
			rno = #{rno}
		
	</delete>
	
	<update id="update">
		
		update
			tbl_reply
		set
			reply = #{reply}, updatedate = now()
		where
			rno = #{rno}
		
	</update>
	
	<select id="getListWithPaging" resultType="com.coffeereview.domain.ReplyVO">
	
		select
			*
		from
			tbl_reply
		where
			mno = #{mno}
		order by 
			rno asc
		
	</select>

</mapper>